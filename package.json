{
  "name": "miniprogram-base",
  "version": "1.0.0",
  "description": "小程序基础结构",
  "main": "src/app.js",
  "scripts": {
    "dev": "medusa-server development",
    "build": "medusa-server production",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Oc-master/miniprogram-base.git"
  },
  "keywords": [
    "miniprogram"
  ],
  "author": "O_c",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Oc-master/miniprogram-base/issues"
  },
  "homepage": "https://github.com/Oc-master/miniprogram-base#readme",
  "dependencies": {
    "medusa-wx-router": "^1.0.4",
    "medusa-wx-toast": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/format": "^11.0.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint-config-medusa": "^1.0.7",
    "lint-staged": "^10.5.3",
    "stylelint-config-medusa": "^1.0.0",
    "webpack-build-miniprogram": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
